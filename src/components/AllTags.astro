---
import { getCollection } from "astro:content";

const allPosts = await getCollection("blog");

const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const postsPerTag = (tagString: string) =>
  allPosts.filter((post) => post.data.tags.includes(tagString)).length;

const { className } = Astro.props;
---

<div class={className}>
  {
    tags.map((tag) => (
      <p class="italic underline decoration-from-font underline-offset-4 hover:underline hover:decoration-wavy hover:decoration-from-font hover:underline-offset-4">
        <a href={`/tags/${tag}`}>
          #{tag} - {postsPerTag(tag)} {postsPerTag(tag) > 1 ? "posts" : "post"}
        </a>
      </p>
    ))
  }
</div>
