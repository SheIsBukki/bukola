---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { pageTitle, className, ogImage, description, ogType, baseUrl } =
  Astro.props;
const baseLayoutUrl = import.meta.env.DEV
  ? "http://localhost:4321"
  : new URL(Astro.request.url).origin;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/bukola.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={ogImage} />
    <meta property="twitter:image" content={ogImage} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description?.slice(0, 140)} />
    <meta property="og:type" content={ogType} />
    <meta
      property="og:url"
      content={baseUrl
        ? baseUrl
        : new URL(`/open-graph/${pageTitle}.png`, baseLayoutUrl).toString()}
    />
    <title>{pageTitle ? `${pageTitle} | Bukola` : "Bukola"}</title>
  </head>
  <body>
    <Header />

    <main class={className}>
      <slot />
    </main>

    <Footer />
  </body>
</html>
