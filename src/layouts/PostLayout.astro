---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="flex flex-col space-y-6">
    <h1 class="text-2xl font-bold md:text-3xl">{frontmatter.title}</h1>

    <div class="flex items-center gap-2 text-sm">
      <span>{new Date(frontmatter.pubDate).toDateString()}</span>
      <span>&bullet;</span>
      <span>8 minutes read</span>
    </div>

    <!-- Tags -->
    <div class="tags flex w-full flex-wrap items-center gap-2 text-xs">
      {
        frontmatter.tags.map((tag: string) => (
          <p class="rounded-xl border-[0.25px] px-2 py-1">
            <a href="#">{tag}</a>
          </p>
        ))
      }
    </div>

    {
      frontmatter.description && (
        <blockquote class="border-l-6 p-4 opacity-80 shadow backdrop-opacity-50">
          {frontmatter.description}
        </blockquote>
      )
    }
    {
      frontmatter.image.url && (
        <figure class="w-full md:h-[240px]">
          <img
            class="object-fit h-full w-full md:aspect-auto"
            src={frontmatter.image.url}
            alt={frontmatter.image.alt}
          />
        </figure>
      )
    }
    <slot />
  </div>
</BaseLayout>

