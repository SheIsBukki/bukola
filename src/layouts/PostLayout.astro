---
import type { MarkdownHeading } from "astro";
import clsx from "clsx";

import BaseLayout from "./BaseLayout.astro";
import BlogSlot from "../components/BlogSlot.astro";
import { removeTags } from "../utils/helpers";
import { regularDate } from "../utils/helpers";

const { post, body, baseUrl, ogImage, ...frontmatter } = Astro.props;

const filteredHeadings = frontmatter.headings.filter((heading:MarkdownHeading) => heading.depth <= 3);
---

<BaseLayout
  description={frontmatter.description
    ? frontmatter.description.slice(0, 160)
    : removeTags(body)}
  ogImage={ogImage}
  ogType='article'
  baseUrl={baseUrl}
  pageTitle={frontmatter.title}
  className={clsx("container mx-auto w-11/12 md:w-10/12", {
    "lg:w-full": frontmatter.headings.length > 0,
  })}
>
  <article
    class={clsx({
      "gap-8 lg:grid md:grid-cols-6": frontmatter.headings.length > 0,
    })}
  >

    <!--LARGE VIEWPORT TABLE OF CONTENT -->
    {
      filteredHeadings.length > 0 && (
        <nav class="table-of-content top-0 bottom-1/3 order-first my-auto hidden py-2 align-middle text-pretty md:sticky md:top-[5rem] md:col-span-2 md:mt-16 lg:block md:shadow md:drop-shadow-current">
          <>
            <h2 class="text-l mb-4 hidden border-b-[0.005px] py-1 text-center text-xl italic md:mb-8 md:block">
              Table of Contents
            </h2>

            <ul role="list" class="spce-y-2 px6 hidden flex-col overflow-auto text-sm opacity-80 md:flex md:justify-baseline lg:text-base">
              {filteredHeadings.map((heading: MarkdownHeading) => (
                <li class="toc p-1 hover:bg-gray-200 hover:dark:bg-gray-800">
                  <a class="" href={`#${heading.slug}`}>
                    {heading.text}
                  </a>
                </li>
              ))}
            </ul>
          </>
        </nav>
      )
    }

    <!-- BLOG CONTENT -->
    <div class="md:order-1 md:col-span-4">
      <div class="flex flex-col space-y-6">
        <h1 class="block font-[Syne] text-3xl font-bold md:text-4xl">
          {frontmatter.title}
        </h1>

        <div class="space-y-1 text-sm">
          <div class="flex items-center gap-2">
            <span>{regularDate(frontmatter.pubDate)}</span>
            <span>&bullet;</span>
            <span>{frontmatter.minutesRead}</span>
          </div>
          <p>
            By: <style></style><a
              href="/about"
              class="underline decoration-[#9775fa80] decoration-3 underline-offset-3 hover:decoration-[#9775fa]"
              >{frontmatter.author}</a>
          </p>
        </div>

        <!-- Tags -->
        <div class="tags flex w-full flex-wrap items-center gap-2 text-sm">
          {
            frontmatter.tags.map((tag: string) => (
              <p class="rounded bg-gray-200 px-2 py-1 hover:bg-gray-300 dark:bg-gray-800 hover:dark:bg-gray-700">
                <a href={`/tags/${tag}`}>#{tag}</a>
              </p>
            ))
          }
        </div>

        <!-- SMALL VIEWPORT TABLE OF CONTENTS -->
        {
          filteredHeadings.length > 0 && (
            <nav>
            <details open class="table-of-content pb-4  shadow lg:hidden">
              <summary class="p-4 bg-gray-100 dark:bg-gray-900 text-l mb4 block italic">Table of Contents</summary>

              <ul role="list" class="flex px-4 max-h-[10rem] flex-col space-y-2 overflow-y-scroll text-sm opacity-80 shadow-[0px_-1px_0px_0px_rgba(0,0,0,0.08)]">
                {filteredHeadings.map((heading: MarkdownHeading) => (
                  <li class="toc small-viewport p-1 hover:bg-gray-200 hover:dark:bg-gray-800 first-of-type:mt-3">
                    <a href={`#${heading.slug}`}>{heading.text}</a>
                  </li>
                ))}
              </ul>
            </details>
            </nav>

          )
        }

        {
          frontmatter.description && (
            <p class="border-l-6 p-4 opacity-70 shadow backdrop-opacity-50">
              {frontmatter.description}
            </p>
          )
        }

        {
          frontmatter.image?.url && (
            <figure class="w-full md:h-[240px]">
              <img
                class="object-fit h-full w-full md:aspect-auto"
                src={frontmatter.image.url}
                alt={frontmatter.image.alt}
              />
            </figure>
          )
        }

        <BlogSlot headings={frontmatter.headings}>
          <slot />
        </BlogSlot>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  li::before {
    line-height: 1;
    content: counters(list-count, ".", decimal-leading-zero) ".";
    font-weight: bold;
    font-size: 1rem;
    padding-inline-end: 0.5rem;
  }

  ul {
    counter-reset: list-count;

    &::-webkit-scrollbar {
      width: 10px;
    }

    &::-webkit-scrollbar-thumb {
      border-radius: 4px;
      background-color: #9775fa80;
      /*background-color: #9775fa80;*/
    }

    &::-webkit-scrollbar-track {
      background-color: #9775fa1a;
    }
  }

  li {
    counter-increment: list-count;
  }
</style>
