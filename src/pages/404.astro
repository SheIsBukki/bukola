---
import ThemeManager from "../components/ThemeManager.astro";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>404</title>
  </head>
  <body>
    <main
      class="container mx-auto translate-y-1/6 space-y-8 text-center md:text-start"
    >
      <span class="visually-hidden">
        <ThemeManager />
      </span>

      <h1 class="font-[Syne] font-bold">ERROR: PAGE NOT FOUND</h1>
      <h2 class="text-[10rem] font-black md:text-[24rem]">404</h2>
      <p class="md:text-xl">This page isn't available.</p>

      <button
        type="button"
        class="rounded-full bg-gray-900 px-6 py-2 text-white dark:bg-gray-50 dark:text-black"
        ><a href="/">Go to Homepage</a></button
      >
    </main>
  </body>
</html>
